<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/servicetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ServiceProvider Name"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/serviceprovide_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/servicetype"
            android:text="ServiceType"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/serviceprovide_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/serviceprovide_name"
            android:text="Mobile"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_right_alt_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            app:tint="@color/black" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>